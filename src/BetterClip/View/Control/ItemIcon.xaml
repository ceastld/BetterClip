<UserControl
    x:Class="BetterClip.View.Control.ItemIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bc="clr-namespace:BetterClip.Control"
    xmlns:bcmmc="clr-namespace:BetterClip.Model.Metadata.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BetterClip.View.Control"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <bcmmc:QualityConverter x:Key="QualityConverter" />
        <CornerRadius x:Key="ControlCornerRadius">4,4,4,4</CornerRadius>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <bc:CachedImage ImageUrl="{Binding Quality, Converter={StaticResource QualityConverter}, Mode=OneWay}" />
            <bc:CachedImage ImageUrl="{Binding Source={StaticResource UI_ImgSign_ItemIcon}}" />
            <bc:CachedImage ImageUrl="{Binding Icon}" />
            <bc:CachedImage
                Margin="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                ImageUrl="{Binding Badge, Mode=OneWay}" />
            <!--<Border Background="White" CornerRadius="5" />-->
        </Grid>
    </Grid>
</UserControl>
